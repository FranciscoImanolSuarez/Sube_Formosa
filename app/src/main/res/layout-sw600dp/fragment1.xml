<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/snackbarPosition">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#512DA8"
        tools:context=".MainActivity">


        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardBackgroundColor="#000000"
            android:layout_gravity="center">

            <net.kianoni.fontloader.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UbicaciÃ³n actual"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                font:fontFile="fonts/Roboto-Medium.ttf"/>

        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                card_view:cardBackgroundColor="#fafafa"
                card_view:cardCornerRadius="9dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp">

                <net.kianoni.fontloader.TextView
                    android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:textSize="14sp"
                     android:id="@+id/ubicacionactual"
                      android:layout_centerHorizontal="true"
                      android:textColor="#000000"
                      android:layout_gravity="center"
                      font:fontFile="fonts/Roboto-Medium.ttf"
                     android:padding="3dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
    </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="#000000"
                android:layout_gravity="center">

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntos cercanos"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:id="@+id/view2"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    font:fontFile="fonts/Roboto-Medium.ttf"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                card_view:cardBackgroundColor="#fafafa"
                card_view:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <com.github.rahatarmanahmed.cpv.CircularProgressView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/progress_view"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cpv_animAutostart="false"
                        app:cpv_indeterminate="true"
                        app:cpv_color="@color/material_blue_300"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:id="@+id/punto1"
                    android:textColor="#000000"/>

                    <View android:background="#9a9d9e"
                        android:layout_width = "match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:id="@+id/punto2"
                    />

                    <View android:background="#9a9d9e"
                        android:layout_width = "match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:id="@+id/punto3"
                    />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>